{
  "name": "learn-deutsch",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "setup": "cd backend && npm install && npm run migrate && npm run seed && cd ../frontend && npm install",
    "dev": "npm-run-all --parallel dev:backend dev:frontend",
    "dev:backend": "cd backend && npm run dev",
    "dev:frontend": "cd frontend && npm run dev",
    "import:vocab": "cd backend && npx tsx ../scripts/import-vocabulary.ts ../scripts/vocabulary.csv",
    "import:sentences": "cd backend && npx tsx ../scripts/import-sentences.ts ../scripts/sentences.csv"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5"
  }
}
